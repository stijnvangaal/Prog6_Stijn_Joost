                                    <DataGrid AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding AfdelingLijstVM.Afdelingen}" SelectedItem="{Binding AfdelingLijstVM.SelectedAfdeling}" Margin="5">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Afdeling" Binding="{Binding Naam}" Width="*" CanUserResize="False"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </Border>

