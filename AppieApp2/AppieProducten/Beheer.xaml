                            </Border>

                            <Border BorderThickness="20,5,20,5" Grid.Column="0" Grid.Row="3">
                                <Button Content="Search" Command="{Binding AfdelingLijstVM.Search}"/>
                            </Border>
                        </Grid>
                        
