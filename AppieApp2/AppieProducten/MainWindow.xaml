<Window x:Class="AppieProducten.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assortiment" Height="500" Width="700"
        DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4">
            <MenuItem Header="Afsluiten" Click="MenuItem_Click"/>
            <MenuItem Header="Assortiment" Click="MenuItem_Click_1"/>
            <MenuItem Header="Recepten" Click="MenuItem_Click_2"/>
            <MenuItem Header="Beheer" Click="MenuItem_Click_3"/>
        </Menu>
        
        <Border Grid.Column="0" Grid.Row="1">
            <DataGrid RowHeaderWidth="0" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding afdelingLijstVM.ComboboxAfdelingen}" SelectedItem="{Binding selectedAfdeling}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Afdeling" Binding="{Binding Naam}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Grid.Column="1" Grid.Row="1">
            <DataGrid RowHeaderWidth="0" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding productListVM.ComboBoxProducten}" SelectedItem="{Binding productMerkListVM.selectedProduct}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product" Binding="{Binding Naam}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Grid.Column="2" Grid.Row="1">
            <DataGrid RowHeaderWidth="0" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding merkListVM.ComboboxMerken}" SelectedItem="{Binding productMerkListVM.selectedMerk}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Merk" Binding="{Binding Naam}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Grid Grid.Column="3" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            
            <DataGrid RowHeaderWidth="0" Grid.Column="0" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding productMerkListVM.SortedProducten}" SelectedItem="{Binding productMerkListVM.SelectedProductMerk}">
              
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="White" />
                                <Setter Property="Foreground" Value="Blue" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="BorderBrush" Value="Blue" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Afdeling" Binding="{Binding Product.AfdelingNaam}" Width="auto"/>
                    <DataGridTextColumn Header="Product" Binding="{Binding Product.Naam}" Width="auto"/>
                    <DataGridTextColumn Header="Merk" Binding="{Binding MerkNaam}" Width="auto"/>
                    <DataGridTextColumn Header="Prijs p.s." Binding="{Binding Prijs}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <Button Grid.Column="0" Grid.Row="1" Content="Toevoegen" Command="{Binding AddProduct}" Width="100" Margin="5"/> 
            
        </Grid>
    </Grid>
    
    
